{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* TypeChain */
    "outDir": "dist", // Ensure TypeChain outputs can be handled
    "rootDir": ".", // Adjust if source is not root

    /* Hardhat */
    "esModuleInterop": true, // Important for Hardhat tasks
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true

  },
  "include": ["src", "test", "scripts", "hardhat.config.cjs"], // Include Hardhat config (.cjs) and test/scripts folders
  "exclude": ["node_modules", "dist", "100bet-app"] // Exclude frontend app build/config
} 